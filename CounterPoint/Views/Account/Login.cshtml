@model CounterPoint.ViewModels.LoginViewModel

<div class="row">
    <div class="col-md-6 offset-md-6">
        <h3 class="text-center csi-login-header">User Login</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        @*<div class="d-flex flex-column align-items-center">
        <h1>Welcome to</h1>
        <p>Network Name 1</p>
        <p>We’ve updated our CSI Electronic Affidavit System, Use the login form at the right to see it in action. It’s FAST | RELIABLE | EFFICIENT</p>
        </div>*@
    </div>
    <div class="col-md-6">
        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="row justify-content-center">
                <div class="col-auto">
                    <div class="card csi-login-box">
                        <article class="card-body csi-login-card">
                            <p>Please log in using affiliated station username.</p>
                            <div class="form-group">
                                <div class="input-group">
                                    <input asp-for="Username" class="form-control" placeholder="Email or login" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <input asp-for="Password" class="form-control" placeholder="******" type="password">
                                </div>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="remember-me"> Remember me
                                </label>
                            </div>
                            <div class="form-group mb-0">
                                <button type="submit" class="btn btn-primary btn-block"> Login  </button>
                            </div>
                        </article>
                    </div>
                    <div class="csi-login-trouble">
                        <p class="font-weight-bold text-center">Having trouble logging in?</p>
                    </div>
                    <div class="d-flex justify-content-between csi-login-fp-help">
                        <button class="btn btn-light"><i class="fa fa-lock"></i> Forgot password?</button>
                        <button class="btn btn-light"><i class="fa fa-circle-question"></i> Help me sign on</button>
                    </div>
                    <div class="d-flex flex-column align-items-center csi-login-powered-by">
                        <p class="mb-2">Powered by</p>
                        <img class="csi-login-img" src="~/assets/images/logo.jpg">
                    </div>
                    <div class="csi-login-footer">
                        <p class="font-weight-small">Copyright &copy; 2022 | Privacy statement | Terms of use | All policies and guidelines</p>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

